<!DOCTYPE html>
<html>
  <head>
    <title>Niyati Trail</title>
    <!-- Favicon-->
    <link
      rel="icon"
      type="image/x-icon"
      href="resources/img/logo/favicon.ico"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@100;300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/fluid.css" />
    <link rel="stylesheet" type="text/css" href="/css/indexstyle.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/css/needworkdescriptionstyle.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- font awesome -->
    <script
      src="https://kit.fontawesome.com/31149d48b0.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!--Header-->
    <header>
      <nav>
        <img src="/resources/img/logo/Logo.png" alt="SPARK logo" class="logo" />
        <ul class="main-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/">About</a></li>
          <li><a href="/submit-work">Want Work</a></li>
          <li><a href="/">Give Work</a></li>
          <li><a href="/">Blog</a></li>
          <li><a href="/">Contact</a></li>
        </ul>
      </nav>

      <main class="container">
        <!-- Left Column / Need Women Image -->
        <div class="left-column">
          <img data-image="black" src="<%= profile.profile_img %>" alt="" />
        </div>

        <!-- Right Column -->
        <div class="right-column">
          <!-- Women Description -->
          <div class="women-description">
            <span><%= profile.profile_interest %></span>
            <h1><%= profile.profile_name %></h1>
            <p><%= profile.profile_description %></p>
          </div>

          <!-- Women Configuration -->
          <div class="women-configuration">
            <!-- Women Interests -->
            <div class="women-interest">
              <span>Interest</span>

              <div class="interest-choose">
                <p><%= profile.profile_interest %></p>
              </div>
            </div>

            <!-- Women Interests -->
            <div class="women-interest">
              <span>Address</span>

              <div class="interest-choose">
                <p><%= profile.profile_address %></p>
              </div>
            </div>

            <!-- Women Interests -->
            <div class="women-interest">
              <span>When she want to start?</span>

              <div class="interest-choose">
                <p><%= profile.profile_date %></p>
              </div>
            </div>
          </div>

          <!-- Product Pricing -->
          <div class="women-contacther">
            <a
              href="https://mail.google.com/mail/u/0/?fs=1&tf=cm&to=<%=profile.profile_email%>"
              class="cart-btn"
              target="_blank"
              >Contact Her</a
            >
          </div>
        </div>
      </main>
    </header>
    <footer>
      <div class="row">
        <p>
          This is a prototype website developed for learning purposes.<br />Not
          for official use. Website developed for Hackathon Hack the League.
        </p>
      </div>
    </footer>
  </body>
</html>
